{
  // Required
  "manifest_version": 2,
  "name": "Colormatch",
  "version": "1.0.0",

  // Recommended
  "description": "A fun, simple and relaxing game ",
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "browser_action":{
    "default_title": "Play the game",
    "default_icon": "icons/48x48.png",
    "default_popup": "Colormatch.html"
  },
  // Optional
  "author": "Mohit chattlani",
  "background": {
    // Recommended
    "persistent": false
  },
  "content_scripts": [ {
      "matches": ["*://*/*"],
      "js": ["scripts/script.js"]
    }],
  "offline_enabled": true,
  "short_name": "Cmatch",
}